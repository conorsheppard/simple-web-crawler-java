#!/bin/zsh

PROJECT_NAME="simple-web-crawler-java"
JAR_FILE="target/${PROJECT_NAME}-1.0-SNAPSHOT.jar"

# Check if Maven build is needed
if [[ ! -f "$JAR_FILE" ]]; then
    echo "üì¶ Building project with Maven..."
    mvn clean package || { echo "‚ùå Build failed!"; exit 1; }
fi

java -jar "$JAR_FILE" "$@"
